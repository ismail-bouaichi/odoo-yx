<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="rental_management.SaleContractDashboard">
        <div class="o_rental_contract_dashboard container-fluid d-flex flex-column py-4 border-bottom bg-view overflow-x-auto">
            <div class="d-flex flex-column flex-lg-row mx-2 mb-4">
                <div class="d-flex flex-column flex-grow-1 mx-5">
                  <div class="text-center d-flex justify-content-center align-items-center mb-2">
                        <h5 class="fw-bold mb-0 ms-2">Status</h5>
                  </div>
                    <div class="d-flex gap-1 justify-content-between mb-3">
                        <div class="text-center d-flex justify-content-center align-items-center mb-2 mx-1">
                            <h5 class="fw-bold mb-0 ms-2">Contracts</h5>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-total prop-cursor"
                                 t-on-click="() => this.viewContract('stage','booked')" title="Booked">
                                <h4 class="bg-total mb-1">
                                    <t t-out="this.state.sale_contract_data.booked_count"/>
                                </h4>
                                <div class="fw-bold">Booked</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-draft prop-cursor"
                                t-on-click="() => this.viewContract('stage','sold')" title="Sold">
                                <h4 class="bg-draft mb-1"><t t-out="this.state.sale_contract_data.sold_count"/></h4>
                                <div class="fw-bold">Sold</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-available prop-cursor"
                                 t-on-click="() => this.viewContract('stage','refund')"
                                 title="Refund">
                                <h4 class="bg-available mb-1"><t t-out="this.state.sale_contract_data.refund_count"/></h4>
                                <div class="fw-bold">Refund</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column flex-grow-1 mx-5">
                    <div class="text-center d-flex justify-content-center align-items-center mb-2">
                        <h5 class="fw-bold mb-0 ms-2">Property Types</h5>
                    </div>
                    <div class="d-flex gap-2 justify-content-between mb-3">
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center bg-sale custom-sale-card prop-cursor"
                                 t-on-click="() => this.viewContract('type','land')" title="Land Properties Contracts">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.sale_contract_data.land_count"/></h4>
                                <div class="fw-bold">Land</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-booked prop-cursor"
                                 t-on-click="() => this.viewContract('type','residential')" title="Residential Properties Contracts">
                                <h4 class="bg-booked mb-1"><t t-out="this.state.sale_contract_data.residential_count"/></h4>
                                <div class="fw-bold">Residential</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-sold prop-cursor"
                                 t-on-click="() => this.viewContract('type','commercial')" title="Commercial Properties Contracts">
                                <h4 class="bg-sold mb-1"><t t-out="this.state.sale_contract_data.commercial_count"/></h4>
                                <div class="fw-bold bg-sold">Commercial</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-sale-card bg-available prop-cursor"
                                 t-on-click="() => this.viewContract('type','industrial')" title="Industrial Properties Contracts">
                                <h4 class="bg-available mb-1"><t t-out="this.state.sale_contract_data.industrial_count"/></h4>
                                <div class="fw-bold">Industrial</div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </t>
</templates>