<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="rental_management.RentalContractDashboard">
        <div class="o_rental_contract_dashboard container-fluid d-flex flex-column py-4 border-bottom bg-view overflow-x-auto">
            <div class="d-flex flex-column flex-lg-row mx-4 mb-4 gap-2">
                <div class="d-flex flex-column flex-grow-1">
                    <div class="text-center d-flex justify-content-center align-items-center mb-2">
                        <h5 class="fw-bold mb-0 ms-2">Status</h5>
                    </div>
                    <div class="d-flex gap-2 justify-content-between mb-3">
                        <div class="text-center d-flex justify-content-center align-items-center mb-2 mx-1">
                            <h5 class="fw-bold mb-0 ms-2">Contracts</h5>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-total prop-cursor"
                                 t-on-click="() => this.viewContract('contract_type','new_contract')" title="Draft Contracts">
                                <h4 class="bg-total mb-1">
                                    <t t-out="this.state.tenancy_data.new_contract_count"/>
                                </h4>
                                <div class="fw-bold">Draft</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-draft prop-cursor"
                                t-on-click="() => this.viewContract('contract_type','running_contract')" title="Running Contracts">
                                <h4 class="bg-draft mb-1"><t t-out="this.state.tenancy_data.running_contract_count"/></h4>
                                <div class="fw-bold">Running</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-available prop-cursor"
                                 t-on-click="() => this.viewContract('contract_type','expire_contract')"
                                 title="Expire Contract">
                                <h4 class="bg-available mb-1"><t t-out="this.state.tenancy_data.expire_contract_count"/></h4>
                                <div class="fw-bold">Expire</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mx-2  d-lg-block"></div>

                <div class="d-flex flex-column flex-grow-1">

                    <div class="text-center d-flex justify-content-center align-items-center mb-2">
                        <h5 class="fw-bold mb-0 ms-2">Payment Terms</h5>
                    </div>
                    <div class="d-flex gap-2 justify-content-between mb-3">
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center bg-sale custom-rent-card prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','daily')" title="Daily Payment Contracts">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.tenancy_data.daily_count"/></h4>
                                <div class="fw-bold">Daily</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-booked prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','monthly')" title="Monthly Payment Contracts">
                                <h4 class="bg-booked mb-1"><t t-out="this.state.tenancy_data.monthly_count"/></h4>
                                <div class="fw-bold">Monthly</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-sold prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','quarterly')" title="Quarterly Payment Contracts">
                                <h4 class="bg-sold mb-1"><t t-out="this.state.tenancy_data.quarterly_count"/></h4>
                                <div class="fw-bold bg-sold">Quarterly</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-booked prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','half_year')" title="Half Year Payment Contracts">
                                <h4 class="bg-booked mb-1"><t t-out="this.state.tenancy_data.half_year_count"/></h4>
                                <div class="fw-bold bg-booked">Half Year</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-sale prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','year')" title="Yearly Payment Contracts">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.tenancy_data.year_count"/></h4>
                                <div class="fw-bold">Yearly</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-available prop-cursor"
                                 t-on-click="() => this.viewContract('payment_term','full_payment')" title="Fully Payment Contracts">
                                <h4 class="bg-available mb-1"><t t-out="this.state.tenancy_data.full_payment_count"/></h4>
                                <div class="fw-bold">Full Payment</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mx-2"></div>

                <div class="d-flex flex-column flex-grow-1">
                    <div class="text-center d-flex justify-content-center align-items-center mb-2">
                        <h5 class="fw-bold mb-0 ms-2">Duration Types</h5>
                    </div>
                    <div class="d-flex gap-2 justify-content-between mb-3">
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center bg-sale custom-rent-card prop-cursor"
                                 t-on-click="() => this.viewContract('duration_type','by_duration')" title="By Duration Contracts">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.tenancy_data.by_duration_count"/></h4>
                                <div class="fw-bold">By Duration</div>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="card p-3 text-center custom-rent-card bg-booked prop-cursor"
                                 t-on-click="() => this.viewContract('duration_type','by_date')" title="By Date Contracts">
                                <h4 class="bg-booked mb-1"><t t-out="this.state.tenancy_data.by_date_count"/></h4>
                                <div class="fw-bold">By Date</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>