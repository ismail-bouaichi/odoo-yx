<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="rental_management.RentalPropertyDashboard">
        <div class="o_rental_property_dashboard container-fluid d-flex flex-column py-4 border-bottom bg-view overflow-x-auto">
            <div class="d-flex flex-column flex-lg-row gap-3 mx-4 mb-4">
                <!-- First Column - Available and On Rent Properties -->
                <div class="d-flex flex-column flex-grow-1 flex-lg-grow-0">
                    <!-- All Properties Row -->
                    <div class="d-flex flex-column flex-sm-row mb-2">
                        <div class="d-flex align-items-center justify-content-end justify-content-lg-start text-end text-lg-start mb-1 mb-sm-0"
                             style="width: 100px;">
                            All
                        </div>
                        <div class="d-flex flex-grow-1 gap-1">
                         <!-- Total Properties -->
                            <div class="flex-grow-1">
                                <div class="card mx-1 p-3 text-center custom-card bg-total prop-cursor"
                                     t-on-click="() => this.viewAllProperties('all')" title="Total Properties">
                                    <h4 class="bg-total mb-1">
                                        <t t-out="this.state.property_data.total_prop_count"/>
                                    </h4>
                                    <div class="fw-bold">Total</div>
                                </div>
                            </div>
                            <!-- Draft Properties -->
                            <div class="flex-grow-1">
                                <div class="card p-3 mx-1 text-center custom-card bg-draft prop-cursor"
                                     t-on-click="() => this.viewAllProperties('draft')" title="Draft Properties">
                                    <h4 class="bg-draft mb-1"><t t-out="this.state.property_data.draft_prop_count"/></h4>
                                    <div class="fw-bold">Draft</div>
                                </div>
                             </div>
                            <!-- Available Properties -->
                            <div class="flex-grow-1" title="All Available Properties">
                                <div class="card mx-1 p-3 text-center custom-card bg-available prop-cursor"
                                     t-on-click="() => this.viewAllProperties('available')">
                                    <h4 class="bg-available mb-1"><t t-out="this.state.property_data.available_prop_count"/></h4>
                                    <div class="fw-bold">Available</div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Property Types Row -->
                    <div class="d-flex flex-column flex-sm-row">
                        <div class="d-flex align-items-center justify-content-end justify-content-lg-start text-end text-lg-start mb-1 mb-sm-0"
                             style="width: 100px;">
                            Property Types
                        </div>
                        <div class="d-flex flex-grow-1 gap-1">
                         <!-- Total Property Types -->
                            <div class="d-flex justify-content-center flex-grow-1 mx-1" title="Total Properties">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('all','land')">
                                    <t t-out="this.state.property_data.total_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('all','residential')">
                                    <t t-out="this.state.property_data.total_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('all','commercial')">
                                    <t t-out="this.state.property_data.total_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('all','industrial')">
                                    <t t-out="this.state.property_data.total_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>
                            <!-- Draft Property Types -->
                            <div class="d-flex justify-content-center flex-grow-1 mx-1" title="Draft Properties">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('draft','land')">
                                    <t t-out="this.state.property_data.draft_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('draft','residential')">
                                    <t t-out="this.state.property_data.draft_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('draft','commercial')">
                                    <t t-out="this.state.property_data.draft_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('draft','industrial')">
                                    <t t-out="this.state.property_data.draft_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>
                            <!-- Available Property Types -->
                            <div class="d-flex justify-content-center flex-grow-1 mx-1" title="Available">
                                <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                    <div class="property_type_box bg-land prop-cursor"
                                         t-on-click="() => this.viewProperties('available','land')">
                                        <t t-out="this.state.property_data.available_land_prop_count"/>
                                    </div>
                                    <div class="property_type_box bg-residential prop-cursor"
                                         t-on-click="() => this.viewProperties('available','residential')">
                                        <t t-out="this.state.property_data.available_residential_prop_count"/>
                                    </div>
                                    <div class="property_type_box bg-commercial prop-cursor"
                                         t-on-click="() => this.viewProperties('available','commercial')">
                                        <t t-out="this.state.property_data.available_commercial_prop_count"/>
                                    </div>
                                    <div class="property_type_box bg-industrial prop-cursor"
                                         t-on-click="() => this.viewProperties('available','industrial')">
                                        <t t-out="this.state.property_data.available_industrial_prop_count"/>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

                <!-- Second Column - Sale, Booked and Sold Properties -->
                <div class="d-flex flex-column flex-grow-1 flex-lg-grow-0">
                    <!-- Status Cards Row -->
                    <div class="d-flex mb-2">
                        <!-- Sale Properties -->
                        <div class="flex-grow-1" title="All On Sale Properties">
                            <div class="card mx-1 p-3 text-center bg-sale custom-card prop-cursor"
                                 t-on-click="() => this.viewAllProperties('sale')">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.property_data.sale_prop_count"/></h4>
                                <div class="fw-bold">For Sale</div>
                            </div>
                        </div>
                        <!-- Booked Properties -->
                        <div class="flex-grow-1" title="All Booked Properties">
                            <div class="card mx-1 p-3 text-center custom-card bg-booked prop-cursor"
                                 t-on-click="() => this.viewAllProperties('booked')">
                                <h4 class="bg-booked mb-1"><t t-out="this.state.property_data.booked_prop_count"/></h4>
                                <div class="fw-bold">Booked</div>
                            </div>
                        </div>
                        <!-- Sold Properties -->
                        <div class="flex-grow-1" title="All Sold Properties">
                            <div class="card mx-1 p-3 text-center custom-card bg-sold prop-cursor"
                                 t-on-click="() => this.viewAllProperties('sold')">
                                <h4 class="bg-sold mb-1"><t t-out="this.state.property_data.sold_prop_count"/></h4>
                                <div class="fw-bold bg-sold">Sold</div>
                            </div>
                        </div>
                    </div>

                    <!-- Property Types Row -->
                    <div class="d-flex">
                        <!-- Sale Property Types -->
                        <div class="d-flex justify-content-center mx-1 flex-grow-1" title="Sale">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('sale','land')">
                                    <t t-out="this.state.property_data.sale_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('sale','residential')">
                                    <t t-out="this.state.property_data.sale_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('sale','commercial')">
                                    <t t-out="this.state.property_data.sale_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('sale','industrial')">
                                    <t t-out="this.state.property_data.sale_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>

                        <!-- Booked Property Types -->
                        <div class="d-flex justify-content-center mx-1 flex-grow-1" title="Booked">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('booked','land')">
                                    <t t-out="this.state.property_data.booked_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('booked','residential')">
                                    <t t-out="this.state.property_data.booked_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('booked','commercial')">
                                    <t t-out="this.state.property_data.booked_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('booked','industrial')">
                                    <t t-out="this.state.property_data.booked_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>

                        <!-- Sold Property Types -->
                        <div class="d-flex justify-content-center mx-1 flex-grow-1" title="Sold">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('sold','land')">
                                    <t t-out="this.state.property_data.sold_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('sold','residential')">
                                    <t t-out="this.state.property_data.sold_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('sold','commercial')">
                                    <t t-out="this.state.property_data.sold_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('sold','industrial')">
                                    <t t-out="this.state.property_data.sold_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Third Column - Total and Draft Properties -->
                <div class="d-flex flex-column flex-grow-1 flex-lg-grow-0">
                    <!-- Cards Row -->
                    <div class="d-flex mb-2 gap-2">
                    <!-- For Rent property -->
                        <!-- On Rent Properties -->
                        <div class="flex-grow-1" title="For Rent Properties">
                            <div class="card mx-1 p-3 text-center custom-card bg-sale prop-cursor"
                                 t-on-click="() => this.viewForRentProperties('all')">
                                <h4 class="bg-sale mb-1"><t t-out="this.state.property_data.total_for_rent_count"/></h4>
                                <div class="fw-bold">For Rent</div>
                            </div>
                        </div>
                        <!-- On Rent Properties -->
                        <div class="flex-grow-1" title="All On Rent Properties">
                            <div class="card mx-1 p-3 text-center custom-card bg-available prop-cursor"
                                 t-on-click="() => this.viewAllProperties('on_lease')">
                                <h4 class="bg-available mb-1"><t t-out="this.state.property_data.on_lease_prop_count"/></h4>
                                <div class="fw-bold">On Rent</div>
                            </div>
                        </div>
                    </div>

                    <!-- Property Types Row -->
                    <div class="d-flex gap-2">
                    <!--For Rent Property -->
                        <div class="d-flex justify-content-center flex-grow-1 mx-1" title="For Rent">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewForRentProperties('land')">
                                    <t t-out="this.state.property_data.total_for_rent_land_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewForRentProperties('residential')">
                                    <t t-out="this.state.property_data.total_for_rent_residential_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewForRentProperties('commercial')">
                                    <t t-out="this.state.property_data.total_for_rent_commercial_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewForRentProperties('industrial')">
                                    <t t-out="this.state.property_data.total_for_rent_industrial_count"/>
                                </div>
                            </div>
                        </div>
                        <!-- On Lease Property Types -->
                        <div class="d-flex justify-content-center flex-grow-1 mx-1" title="On lease">
                            <div class="d-flex flex-wrap justify-content-between" style="width: 150px;">
                                <div class="property_type_box bg-land prop-cursor"
                                     t-on-click="() => this.viewProperties('on_lease','land')">
                                    <t t-out="this.state.property_data.on_lease_land_prop_count"/>
                                </div>
                                <div class="property_type_box bg-residential prop-cursor"
                                     t-on-click="() => this.viewProperties('on_lease','residential')">
                                    <t t-out="this.state.property_data.on_lease_residential_prop_count"/>
                                </div>
                                <div class="property_type_box bg-commercial prop-cursor"
                                     t-on-click="() => this.viewProperties('on_lease','commercial')">
                                    <t t-out="this.state.property_data.on_lease_commercial_prop_count"/>
                                </div>
                                <div class="property_type_box bg-industrial prop-cursor"
                                     t-on-click="() => this.viewProperties('on_lease','industrial')">
                                    <t t-out="this.state.property_data.on_lease_industrial_prop_count"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Legend Row -->
            <div class="d-flex mt-2">
                <div class="d-flex justify-content-center w-100">
                    <div class="d-flex m-1 align-items-center">
                        <div class="legend_box bg-land"></div>
                        <span class="px-2 text-center">Land</span>
                    </div>
                    <div class="d-flex m-1 align-items-center">
                        <div class="legend_box bg-residential"></div>
                        <span class="px-2">Residential</span>
                    </div>
                    <div class="d-flex m-1 align-items-center">
                        <div class="legend_box bg-commercial"></div>
                        <span class="px-2">Commercial</span>
                    </div>
                    <div class="d-flex m-1 align-items-center">
                        <div class="legend_box bg-industrial"></div>
                        <span class="px-2">Industrial</span>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
