<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Add label for new Property Type: Residential and Commercial
        This file adds the missing label in all property views
    -->

    <!-- Add label in property.sub.project form view -->
    <record id="property_sub_project_view_form_add_res_comm_label" model="ir.ui.view">
        <field name="name">property.sub.project.view.form.add.res.comm.label</field>
        <field name="model">property.sub.project</field>
        <field name="inherit_id" ref="rental_management.property_sub_project_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='project_details']//div[field[@name='property_subtype_id']]" position="before">
                <label for="property_subtype_id" string="Type Résidentiel &amp; Commercial"
                       invisible="property_type != 'residential_commercial'"/>
            </xpath>
        </field>
    </record>

    <!-- Add label in property.details form view -->
    <record id="property_details_form_view_add_res_comm_label" model="ir.ui.view">
        <field name="name">property.details.form.view.add.res.comm.label</field>
        <field name="model">property.details</field>
        <field name="inherit_id" ref="rental_management.property_details_form_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='property_subtype_id']" position="before">
                <label for="property_subtype_id" string="Type Résidentiel &amp; Commercial"
                       invisible="type != 'residential_commercial'"/>
            </xpath>
        </field>
    </record>

</odoo>
