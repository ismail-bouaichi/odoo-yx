<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_payment_justification_wizard_form" model="ir.ui.view">
            <field name="name">payment.justification.wizard.form</field>
            <field name="model">payment.justification.wizard</field>
            <field name="arch" type="xml">
                <form string="Submit Payment Document">
                    <group>
                        <field name="line_id" readonly="1"/>
                        <field name="document" filename="filename"/>
                        <field name="filename"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button name="action_submit" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
