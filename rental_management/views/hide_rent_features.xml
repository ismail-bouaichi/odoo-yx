<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Hide Rental Features - Convert to Sales Only Solution
        This file hides all rental-related elements from the UI
    -->

    <!-- ============================================== -->
    <!-- 1. HIDE project_for RADIO BUTTON IN VIEWS     -->
    <!-- ============================================== -->

    <!-- Hide rental-related elements in property.project form view -->
    <record id="property_project_view_form_hide_rent" model="ir.ui.view">
        <field name="name">property.project.view.form.hide.rent</field>
        <field name="model">property.project</field>
        <field name="inherit_id" ref="rental_management.property_project_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Hide "Rent Units" smart button -->
            <xpath expr="//button[@name='action_view_rent_unit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <!-- Hide rent_count field -->
            <xpath expr="//field[@name='rent_count']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Note: project_for field kept visible in list view with only "Sale" option (defined in Python) -->

    <!-- Hide project_for filter in search view -->
    <record id="property_project_search_view_hide_rent" model="ir.ui.view">
        <field name="name">property.project.search.view.hide.rent</field>
        <field name="model">property.project</field>
        <field name="inherit_id" ref="rental_management.property_project_search_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='groupby_project_for']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- 2. HIDE RENTAL IN property.sub.project VIEWS  -->
    <!-- ============================================== -->

    <!-- Hide rent button in property.sub.project form view -->
    <record id="property_sub_project_view_form_hide_rent" model="ir.ui.view">
        <field name="name">property.sub.project.view.form.hide.rent</field>
        <field name="model">property.sub.project</field>
        <field name="inherit_id" ref="rental_management.property_sub_project_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Hide "Rent Units" smart button -->
            <xpath expr="//button[@name='action_view_rent_unit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- 3. HIDE RENTAL IN property.details VIEWS      -->
    <!-- ============================================== -->

    <!-- Note: sale_lease field is kept visible with only "Sale" option (defined in Python) -->

    <!-- Hide rental filters in property.details search view -->
    <record id="property_details_search_view_hide_rent" model="ir.ui.view">
        <field name="name">property.details.search.view.hide.rent</field>
        <field name="model">property.details</field>
        <field name="inherit_id" ref="rental_management.property_details_search_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Hide "Property For" group-by filter -->
            <xpath expr="//filter[@name='property_for']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide sale_lease in searchpanel -->
            <xpath expr="//searchpanel/field[@name='sale_lease']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- 4. HIDE RENTAL MENUS                          -->
    <!-- ============================================== -->

    <!-- Hide "Renting" main menu -->
    <record id="rental_management.menu_tenancy_details" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Hide "Contracts" submenu under Renting -->
    <record id="rental_management.menu_rent_contract" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Hide "Invoices" submenu under Renting -->
    <record id="rental_management.menu_rent_invoice_tenancy" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Hide "Bills" submenu under Renting -->
    <record id="rental_management.menu_rent_bills_tenancy" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Hide "Contract Durations" in Configuration (rental-specific) -->
    <record id="rental_management.menu_contract_duration" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Hide old "Sub Projects" menu (replaced by custom "Blocs" menu) -->
    <record id="rental_management.menu_property_sub_project" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Rename "Sub Projects" action to "Blocs" for breadcrumb -->
    <record id="rental_management.action_property_sub_project" model="ir.actions.act_window">
        <field name="name">Blocs</field>
    </record>

    <!-- ============================================== -->
    <!-- RENAME "Sub Project" FILTER TO "Bloc"         -->
    <!-- ============================================== -->
    
    <!-- Rename in property.details search view -->
    <record id="property_details_search_view_rename_bloc" model="ir.ui.view">
        <field name="name">property.details.search.view.rename.bloc</field>
        <field name="model">property.details</field>
        <field name="inherit_id" ref="rental_management.property_details_search_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_by_subproject']" position="attributes">
                <attribute name="string">Bloc</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- HIDE "Is section-wise area measurement" FIELD -->
    <!-- ============================================== -->
    <record id="property_details_view_form_hide_section_measurement" model="ir.ui.view">
        <field name="name">property.details.view.form.hide.section.measurement</field>
        <field name="model">property.details</field>
        <field name="inherit_id" ref="rental_management.property_details_form_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Hide the entire div containing "Is section-wise detailed area measurement?" -->
            <xpath expr="//page[@name='area_measurement']/div[@class='row']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Also hide the room_measurement_ids field that depends on it -->
            <xpath expr="//field[@name='room_measurement_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide Furnishing field -->
            <xpath expr="//field[@name='furnishing_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide BHK label and field -->
            <xpath expr="//label[@for='unit_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='unit_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide Maintenance Details - hide individual fields -->
            <xpath expr="//field[@name='is_maintenance_service']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='maintenance_rent_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='maintenance_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='per_area_maintenance']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='per_area_maintenance']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='pricing_details']//field[@name='total_maintenance']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide Utility Services - hide individual fields -->
            <xpath expr="//field[@name='is_extra_service']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='extra_service_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='extra_service_cost']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide entire Maintenance Details section (using name attribute) -->
            <xpath expr="//group[@name='maintenance_details_group']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Hide entire Utility Services section (using name attribute) -->
            <xpath expr="//group[@name='utility_services_group']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
