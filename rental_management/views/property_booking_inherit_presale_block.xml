<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="property_details_form_view_inherit_presale_block_booking" model="ir.ui.view">
      <field name="name">property.details.form.presale.block.booking</field>
      <field name="model">property.details</field>
      <field name="inherit_id" ref="rental_management.property_details_form_view"/>
      <field name="arch" type="xml">
        <!-- on cible le bouton Booking existant par son external id d'action -->
        <xpath expr="//header/button[@name='%(booking_wizard_action)d']" position="attributes">
          <attribute name="invisible">(stage not in ['available','sale','pre_sale']) or (presale_id and presale_id.state == 'active')</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
