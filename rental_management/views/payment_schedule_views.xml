<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_property_payment_schedule_tree" model="ir.ui.view">
            <field name="name">property.payment.schedule.tree</field>
            <field name="model">property.payment.schedule</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="vendor_id"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="amount"/>
                    <field name="paid_amount"/>
                    <field name="residual_amount"/>
                    <field name="due_date"/>
                    <field name="state"/>
                    <field name="validation_state"/>
                    <field name="payment_doc_id"/>
                </list>
            </field>
        </record>

        <record id="view_property_payment_schedule_form" model="ir.ui.view">
            <field name="name">property.payment.schedule.form</field>
            <field name="model">property.payment.schedule</field>
            <field name="arch" type="xml">
                <form string="Payment Schedule">
                    <header>
                        <button name="action_register_payment" type="object" string="Register/Open Payment"
                                class="btn-primary" invisible="state == 'paid'"/>
                        <button name="action_submit_payment_doc" type="object" string="Submit Document"
                                class="btn-secondary" invisible="validation_state == 'validated'"/>
                        <button name="action_validate_with_doc" type="object" string="Validate"
                                class="btn-success"
                                invisible="validation_state != 'doc_submitted'"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,partial,paid,cancel"
                               nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="vendor_id"/>
                                <field name="partner_id"/>
                                <field name="property_id"/>
                                <field name="amount"/>
                                <field name="paid_amount" readonly="1"/>
                                <field name="residual_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="due_date"/>
                                <field name="validation_state"/>
                                <field name="payment_doc_id" readonly="1"/>
                                <field name="payment_id" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property_payment_schedule" model="ir.actions.act_window">
            <field name="name">Payment Schedule</field>
            <field name="res_model">property.payment.schedule</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
