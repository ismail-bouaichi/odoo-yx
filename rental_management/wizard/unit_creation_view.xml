<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="unit_creation_wizard_view_form" model="ir.ui.view">
            <field name="name">unit_creation_wizard_view_form</field>
            <field name="model">unit.creation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="floor_start_from" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="total_floors" required="1" />
                                <field name="units_per_floor" required="1" />
                            </group>
                            <group>
                                <field name="property_code_prefix" required="1" readonly="1"
                                    force_save="1" />
                            </group>
                        </group>
                        <group string="Unit Details">
                            <group>
                                <field name="unit_price" string="Prix de Vente"/>
                            </group>
                            <group>
                                <field name="unit_area" string="Surface (m²)"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="has_special_floor" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group string="Détails de l'étage spécial" invisible="not has_special_floor">
                            <group>
                                <field name="special_floor_number" required="has_special_floor"/>
                            </group>
                            <group>
                                <field name="special_floor_units" required="has_special_floor"/>
                            </group>
                        </group>
                        <footer>
                            <button string='Create units' name="action_create_property_unit"
                                type="object"
                                class="btn-primary" />
                            <button string="Discard" class="btn-secondary" special="cancel"
                                data-hotkey="z" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="unit_creation_action" model="ir.actions.act_window">
            <field name="name">Create Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">unit.creation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>