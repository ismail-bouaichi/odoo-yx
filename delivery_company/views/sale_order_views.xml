<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View -->
    <record id="view_sale_order_form_inherit_delivery_company" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delivery.company</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="delivery_company_id" options="{'no_create': True}"/>
                <field name="shipping_payment_method" invisible="not delivery_company_id"/>
                <field name="transport_nature" invisible="not delivery_company_id"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Tree View -->
    <record id="view_sale_order_tree_inherit_delivery_company" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.delivery.company</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="delivery_company_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
