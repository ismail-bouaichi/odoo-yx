<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_partner_form_inherit_delivery" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.delivery</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='sales_purchases']/group" position="inside">
            <group string="Delivery Configuration" name="delivery_config"
                   invisible="customer_rank == 0">
                <field name="delivery_company_id" 
                       string="Delivery Company"/>
            </group>
        </xpath>
    </field>
</record>
</odoo>
