<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Move Form View -->
    <record id="view_account_move_form_inherit_delivery_company" model="ir.ui.view">
        <field name="name">account.move.form.inherit.delivery.company</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="delivery_company_id" readonly="1"
                       options="{'no_create': True, 'no_open': True}"
                       invisible="move_type not in ('out_invoice', 'out_refund')"/>
                <field name="shipping_payment_method" readonly="1"
                       invisible="move_type not in ('out_invoice', 'out_refund') or not delivery_company_id"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Tree View -->
    <record id="view_account_move_tree_inherit_delivery_company" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.delivery.company</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_origin']" position="after">
                <field name="delivery_company_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
