<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order / Quotation Report - Add shipping info under customer address -->
    <template id="report_saleorder_delivery_company" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='information_block']" position="after">
            <t t-if="doc.delivery_company_id" t-set="information_block">
                <t t-out="information_block"/>
                <div class="mt-3">
                    <strong>Shipping Details</strong>
                    <div><span t-field="doc.delivery_company_id.name"/></div>
                    <div t-if="doc.shipping_payment_method">Payment: <span t-field="doc.shipping_payment_method"/></div>
                    <div t-if="doc.transport_nature">Transport: <span t-field="doc.transport_nature"/></div>
                </div>
            </t>
        </xpath>
    </template>

    <!-- Delivery Slip / Pick Report - Add shipping info under customer address -->
    <template id="report_delivery_slip_delivery_company" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-set='information_block']" position="after">
            <t t-if="o.delivery_company_id" t-set="information_block">
                <t t-out="information_block"/>
                <div class="mt-3">
                    <strong>Shipping Details</strong>
                    <div><span t-field="o.delivery_company_id.name"/> - <t t-esc="o.nbr_colis"/> colis</div>
                    <div t-if="o.shipping_payment_method">Payment: <span t-field="o.shipping_payment_method"/></div>
                    <div t-if="o.transport_nature">Transport: <span t-field="o.transport_nature"/></div>
                </div>
            </t>
        </xpath>
    </template>

    <!-- Invoice Report - Add shipping info under customer address (same style as delivery order) -->
    <template id="report_invoice_delivery_company" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='information_block']" position="after">
            <t t-if="o.delivery_company_id" t-set="information_block">
                <t t-out="information_block"/>
                <div class="mt-3">
                    <strong>Shipping Details</strong>
                    <div><span t-field="o.delivery_company_id.name"/></div>
                    <div t-if="o.shipping_payment_method">Payment: <span t-field="o.shipping_payment_method"/></div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
